@model OrderModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Default form</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>
                        <form  asp-action="InitiateOrder" class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="CustomerName" for="exampleInputUsername1">Ürün Adı</label>
                                <input type="text" asp-for="CustomerName" class="form-control" id="exampleInputUsername1">
                            </div>
                            <div class="form-group">
                                <label asp-for="Mobile" for="exampleInputEmail1">Stok</label>
                                <input type="number" asp-for="Mobile" class="form-control" id="exampleInputEmail1">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" for="exampleInputPassword1">Açıklama</label>
                                <input asp-for="Email" type="email" class="form-control" id="exampleInputPassword1">
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" for="exampleInputConfirmPassword1">Fiyat</label>
                                <input asp-for="Price" type="number" class="form-control" id="exampleInputConfirmPassword1">
                            </div>
                            
                            <button type="submit" class="btn btn-primary me-2">Ürün Ekle</button>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

