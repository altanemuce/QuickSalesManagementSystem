@using QSMS.Application.Features.DTOs.User;
@model CreateUserDto
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Default form</h4>
                        <p class="card-description">
                            Basic form layout
                        </p>
                        <form asp-controller="User" asp-action="Add" class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="NameSurname" for="exampleInputUsername1">Ürün Adı</label>
                                <input type="text" asp-for="NameSurname" class="form-control" id="exampleInputUsername1">
                            </div>
                            <div class="form-group">
                                <label asp-for="UserName" for="exampleInputEmail1">Stok</label>
                                <input type="text" asp-for="UserName" class="form-control" id="exampleInputEmail1">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" for="exampleInputPassword1">Açıklama</label>
                                <input asp-for="Email" type="text" class="form-control" id="exampleInputPassword1">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" for="exampleInputConfirmPassword1">Fiyat</label>
                                <input asp-for="Password" type="password" class="form-control" id="exampleInputConfirmPassword1">
                            </div>
                            <div class="form-group">
                                <select id="getCheque" asp-for="Roles" name="Roles" asp-items="@(new SelectList( ViewBag.RoleList,"Value","Text"))" class="default-select wide form-control" id="validationCustom05">
                                </select>
                            </div>                          
                            <button type="submit" class="btn btn-primary me-2">Kişi Ekle</button>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

